WIRELESS_IF=wlan0
if [ $(whoami) != root ]; then
         echo You must run this script as root 1>&2
         exit 2
elif [ $(sudo -v &> /dev/null) ]; then#sudo exist
        sudo "$@"
         exit 0;
fi

dhcpcd -k ${WIRELESS_IF}
killall wpa_supplicant
echo Turning off ${WIRELESS_IF}
ifconfig ${WIRELESS_IF} down
